@model List<WebApp_Project.Models.Details.OrderDetail>;
@{
    ViewData["Title"] = "PostOrder";
}

<h1>PostOrder</h1>
@foreach(var order in Model)
{
    <p>Place to get food : @order.Place</p>
    <p>Restaurant : @order.Restaurant</p>
    <p>Rider Name : @order.Rider.FirstName</p>
    <hr/>
}
<form method="get" asp-controller="Rider" asp-action="BuyerOrder">
    <button type="submit" class="btn btn-primary my-2">สั่งอาหาร</button>
</form>

